
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome to Northwind</h2>

<div id="loginDiv">
	@using (Html.BeginForm("submitLogin", "Home", "POST"))
	{
		<table style="margin:auto;">
			<tr>
				<td>
					@Html.Label("errorMessage",(String)ViewBag.errorMessage, new { style = "color:red" })
				</td>
			</tr>
			<tr>
				<td>
					@Html.TextBox("username","",new { placeholder="Login" })
				</td>
			</tr>
			<tr>
				<td>
				@Html.Password("password", "", new { placeholder = "Password" })
				</td>
			</tr>
			<tr>
				<td>
					<input type="submit" value="Login" />
				</td>
			</tr>
		</table>		 
	}
</div>
